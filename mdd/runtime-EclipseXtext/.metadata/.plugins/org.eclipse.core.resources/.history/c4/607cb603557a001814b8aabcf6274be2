World
{
	fact isNightTime
	fact awaken
	fact alive
	quantity wood
}

abstract event Action
{
	requires awaken == true
	requires alive == true
}

event GatherWood is Action{}


event LightFire is Action
{
	requires wood > 0
	requires isNightTime == true
} 

event BuildPyre is Action
{
	requires wood > 2
}